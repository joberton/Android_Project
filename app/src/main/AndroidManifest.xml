<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_project">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/drink_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DarkAppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipeDetailsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NewRecipeActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UpdateRecipeActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NewReviewActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".UtilityActivity" />
        <activity
            android:name=".ReviewsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ReviewDetailsActivity"
            android:parentActivityName=".ReviewsActivity" />
        <activity
            android:name=".ReviewUpdateActivity"
            android:parentActivityName=".ReviewsActivity" />
        <activity
            android:name=".RecipeHistoryActivity"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>